{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 500,
  "title": {
    "text": "Annual Marriage by states in Malaysia from year 2017 to 2022",
    "subtitle": "Currently only year 2022(Further details have not been added)"
  },
  "projection": { "type": "mercator" },
  "layer": [
    {
      "data": {
        "url": "malaysia_states_map.topojson",
        "format": { "type": "topojson", "feature": "my" }
      },
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" }
    },
    {
      "data": {
        "url": "malaysia_states_map.topojson",
        "format": { "type": "topojson", "feature": "my" }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "marriages_state_age.csv",
              "format": { "type": "csv" }
            },
            "key": "state",
            "fields": ["date", "abs", "rate"]
          }
        },
        { "filter": "substring(datum.date, 0, 4) == '2022'" }
      ],
      "mark": { "type": "geoshape" },
      "encoding": {
        "color": {
          "field": "abs",
          "type": "quantitative",
          "title": "Number of Marriages",
          "scale": { "scheme": "blues" }
        },
        "tooltip": [
          { "field": "properties.name", "title": "State" },
          { "field": "date", "title": "Date" },
          { "field": "abs", "title": "Number of Marriages" },
          { "field": "rate", "title": "Marriage Rate" }
        ]
      }
    }
  ]
}
